<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.pdfGenerator.downloadDashboardData"
    tools:ignore="NamespaceTypo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/header"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Header"
            android:fontFamily="@font/actor"
            android:textSize="34sp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Donation : "
                    android:fontFamily="@font/actor"
                    android:textSize="27sp"
                    android:layout_marginTop="50dp"
                    />

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/total_donation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Header"
                    android:fontFamily="@font/actor"
                    android:textSize="27sp"
                    android:layout_marginTop="50dp"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Donor : "
                    android:fontFamily="@font/actor"
                    android:textSize="27sp"
                    android:layout_marginTop="20dp"
                    />

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/total_donor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Header"
                    android:fontFamily="@font/actor"
                    android:textSize="27sp"
                    android:layout_marginTop="20dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Event : "
                    android:fontFamily="@font/actor"
                    android:textSize="27sp"
                    android:layout_marginTop="20dp"
                    />

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/total_event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Header"
                    android:fontFamily="@font/actor"
                    android:textSize="27sp"
                    android:layout_marginTop="20dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pending Events : "
                    android:fontFamily="@font/actor"
                    android:textSize="27sp"
                    android:layout_marginTop="20dp"
                    />
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/pending_events"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Header"
                    android:fontFamily="@font/actor"
                    android:textSize="27sp"
                    android:layout_marginTop="20dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total User : "
                    android:fontFamily="@font/actor"
                    android:textSize="27sp"
                    android:layout_marginTop="20dp"
                    />

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/total_users"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Header"
                    android:fontFamily="@font/actor"
                    android:textSize="27sp"
                    android:layout_marginTop="20dp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Finished Events : "
                    android:fontFamily="@font/actor"
                    android:textSize="27sp"
                    android:layout_marginTop="20dp"
                    />
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/finished_events"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Header"
                    android:fontFamily="@font/actor"
                    android:textSize="27sp"
                    android:layout_marginTop="20dp"
                    />

            </LinearLayout>


        </LinearLayout>
        <Button
            android:visibility="gone"
            android:id="@+id/generate_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#43FFC107"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Generate pdf"
            android:textColor="@color/black"
            />


    </LinearLayout>

</ScrollView>